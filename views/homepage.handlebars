<ol class='post-list'>
    {{#each posts as |post|}}
  <li>
    <article class='post'>
      <div class='title'>
        <a href='{{post_url}}' target='_blank'>{{title}}</a>
        by {{user.username}} on {{created_at}}
      </div>
      <div>
          {{post_content}}
      </div>
      <div class='meta'>
        <a href='/post/{{post.id}}'>{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>